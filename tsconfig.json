{
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "target": "es5",
    "module": "esnext",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "lib": [
      "es5",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "esnext",
      "dom",
      "dom.iterable"
    ]
  },
  "include": ["src/**/*.ts", "src/global.d.ts"],
  "exclude": ["node_modules"]
}
